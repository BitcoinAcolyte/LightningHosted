<body>
  <div class="page-wrapper">
    <div class="nav-wrapper">
      <div class="grad-bar"></div>
      <nav class="navbar">
        <div id='logo'><a href="/">
            <h1>LightningHosted</h1>
          </a></div>
        <div class="menu-toggle" id="mobile-menu">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
        <ul class="nav no-search">
          <li class="nav-item"><a href="/">Home</a></li>
          <li class="nav-item"><a href="/auth/#">Posts</a></li>
          <li class="nav-item"><a href="/noauth/about">About</a></li>
          <li class="nav-item"><a href="/noauth/contact">Contact</a></li>
          <li class="nav-item"><a id="logInStatus" class="<%= logInStatus %>" href="/noauth/login">Log In</a></li>

        </ul>
      </nav>
    </div>
    <section class="headline">
      <a href="/">
        <h1>Share Images And Stack Sats</h1>
      </a>
    </section>
    <div id='ad1' class='ad'>
      <iframe data-aa="1259139" src="//ad.a-ads.com/1259139?size=468x60" scrolling="no" style="width:468px; height:60px; border:0px; padding:0; overflow:hidden" allowtransparency="true"></iframe>
    </div>

    <form class='loginGrid' action="/noauth/login/submit" method="post">
      <button class='btn registerBtn thirdPartyLoginBtn' type="button" onclick="location.href='/noauth/google';">Log In
        With Google</button>
      <p class="loginMessage thirdPartyLoginBtn"><%= messages.error %> </p>
      <label class='thirdPartyLoginBtn' for="username"><b>Username</b></label>
      <input class='thirdPartyLoginBtn' type="text" placeholder="Enter Username" name="username" required>

      <label class='thirdPartyLoginBtn' for="password"><b>Password</b></label>
      <input class='thirdPartyLoginBtn' type="password" placeholder="Enter Password" name="password" required>

      <button class='btn registerBtn thirdPartyLoginBtn' type="submit">Login</button>
      <input class='btn registerBtn thirdPartyLoginBtn' type="button" onclick="location.href='/noauth/register';"
        value="Register" />
    </form>



</body>
<footer>
  <script src="/script.js"></script>
</footer>